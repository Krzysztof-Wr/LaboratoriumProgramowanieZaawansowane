<Window x:Class="QuizWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="195*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Tytuł quizu:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Opis quizu:" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox"
                     Height="100"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Margin="0,0,0,10"/>
            <Button x:Name="AddQuizButton"
                    Content="Dodaj quiz"
                    Height="30"
                    Width="120" Click="AddQuizButton_Click"/>

        </StackPanel>
        <ListBox x:Name="QuizListBox"
            Grid.Column="2"
            Margin="10,10,10,10"/>
    </Grid>
</Window>
